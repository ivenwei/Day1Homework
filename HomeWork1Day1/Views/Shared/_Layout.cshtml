<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="masthead">
            <ul class="nav nav-justified">
                <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" },null)</li>
                <li>@Html.ActionLink("我的記賬本", "myAccountBook", "MyAccount", new { area = ""}, new { @class = "active" })</li>
                <li>@Html.ActionLink("管理者區", "Index", "MyAccountViewModels", new { area = "Manager" },null)</li>
                <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li>
            </ul>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
